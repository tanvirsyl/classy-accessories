<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center_horizontal">

    </TextView>



    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_below="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/tshirt"
            android:padding="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/shirts"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cloth"
            android:padding="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sports"
            android:padding="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/jacket"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/jacket"
            android:padding="5dp">

        </ImageView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_below="@id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sneakers"
            android:padding="5dp">

        </ImageView>


        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sweater"
            android:padding="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/dress">

        </ImageView>
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/sunglasses">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_below="@id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/hats">

        </ImageView>
        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/wallet">

        </ImageView>
        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/headphone">

        </ImageView>
        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/laptop">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_below="@id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/watch">

        </ImageView>


        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/phone">

        </ImageView>
        <ImageView
            android:id="@+id/belts"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/belts">

        </ImageView>
        <ImageView
            android:id="@+id/saree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/saree">

        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_btn"
        android:layout_below="@id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/admin_logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:padding="18dp"
            android:text="Log out"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center" />

        <Button
            android:id="@+id/check_order"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:padding="18dp"
            android:text="Check Order"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>





</RelativeLayout>